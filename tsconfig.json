{
  "extends": "@type-config/strict",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "release",
    "src/main.prod.js",
    "src/renderer.prod.js",
    "src/dist",
    ".erb/dll"
  ]
}
